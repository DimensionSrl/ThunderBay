<p id="notice"><%= notice %></p>

<h1>Listing Apps</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Key</th>
      <th>Identifier</th>
      <th>Environment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apps.each do |app| %>
      <tr>
        <td><%= app.key %></td>
        <td><%= app.identifier %></td>
        <td><%= app.environment %></td>
        <td><%= link_to 'Show', app, class: "btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_app_path(app), class: "btn btn-default"%></td>
        <td><%= link_to 'Destroy', app, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger", :style => "color:#fff !important;" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New App', new_app_path, class: "btn btn-primary", :style => "color:#fff !important;" %>
